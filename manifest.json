{
  "manifest_version": 2,

  "name": "Taboola xpath selector",
  "short_name": "selector",
  "description": "This extension helps to locate xpath in DOM",
  "version": "1.0",

  "permissions": [
      "activeTab"
  ],

  "background": {
    "scripts": ["xpath-injector.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Taboola Selector Tool",
    "default_icon": {
      "19": "images/toolbar-chrome-ts.png",
      "38": "images/toolbar-chrome@2x-ts.png"
    }
  },

  "icons": {
      "128": "ts_icon_128.png",
      "16": "ts_icon_16.png",
      "48": "ts_icon_48.png"
   },

  "web_accessible_resources": [
    "selector.min.css",
    "taboola_selector.js",
    "mouse_event.js",
    "enable_mouse_event.js",
    "xpath_generator.js"
  ]
}
